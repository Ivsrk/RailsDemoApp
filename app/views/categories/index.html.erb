<h1>Listing all categories</h1>
<table>
  <thead>
    <tr>
    <th>Id</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
<% @categories.each do |category| %>
    <tr>
    <td><%= category.id %></td>
        <td><%= link_to category.name ,category_path(category.id)%></td>
              
        <td><%= link_to 'delete' , category ,method: :delete, data: { confirm: 'Are you sure?' }%></td>
        <td><%= link_to 'edit' , edit_category_path(category)%></td>
        
    </tr>
<%end%>
<%= link_to 'Create' , new_category_path%>
</tbody>

</table>

<br>
